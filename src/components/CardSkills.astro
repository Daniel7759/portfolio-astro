---
import Image from "astro/components/Image.astro";

// CardSkills.astro
const { title, images } = Astro.props;
---

<div class="max-w-sm mx-auto bg-white/10 border border-gray-200/20 rounded-lg shadow dark:bg-gray-700/40 dark:hover:bg-gray-700/50 backdrop-blur-sm dark:border-gray-700 p-4 hover:scale-105 transition">
  <h3 class="text-center text-xl dark:text-teal-400 font-bold mb-4">{title}</h3>
  <div class="grid grid-cols-3 gap-4">
    {images.map((image) => (
      <div class="grid-cols-1 items-center p-4">
        <Image 
        src={image.src} 
        alt={image.alt} 
        width={80}
        height={80}
        class="object-contain" />
        <h4 class="text-center">{image.alt}</h4>
      </div>
    ))}
  </div>
</div>