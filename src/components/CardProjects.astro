---
import Image from "astro/components/Image.astro";

// CardSkills.astro
const { title, image, alt, description, preview, code, tecnologias } =
  Astro.props;
---

<div
  class="flex flex-col h-auto pb-4 md:flex md:flex-row md:h-auto md:pb-0 backdrop-blur-sm rounded-lg shadow-md bg-white/5 transition-all duration-300 md:hover:bg-white/10"
>
  <Image
    src={image}
    alt={alt}
    class="w-full h-auto rounded-t-lg md:w-1/2 md:h-auto object-cover object-left-top md:rounded-l-lg md:rounded-none mb-4 md:mb-0"
  />
  <div class="flex flex-col justify-center px-8 py-4">
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <ul class="flex flex-row flex-wrap mb-2 gap-x-2 gap-y-2">
      {
        tecnologias.map((tech) => (
          <li>
            <span class="flex gap-x-2 rounded-full text-xs bg-white/10 text-black dark:text-white py-1 px-2 items-center text-[10px]">
              <Image 
                src={tech.src} 
                alt={tech.alt} 
                width={24} 
                height={24}
                class="object-contain aspect-square"
              /> 
              {tech.alt}
            </span>
          </li>
        ))
      }
    </ul>
    <p class="mb-2">
      {description}
    </p>
    <div class="flex flex-row justify-start space-x-4">
      {
        code && (
          <a
            href={code}
            target="_blank"
            class="inline-flex items-center gap-2 bg-blue-300 dark:bg-[#194443] border border-white/60 rounded-2xl px-4 py-2"
          >
            <svg
              class="size-6"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
              </>
            </svg>
            Code
          </a>
        )
      }
      {
        preview && (
          <a
            href={preview}
            target="_blank"
            class="inline-flex items-center gap-2 bg-blue-300 dark:bg-[#194443] border border-white/60 rounded-2xl px-4 py-2"
          >
            <svg
              class="size-4"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
              </>
            </svg>
            Preview
          </a>
        )
      }
    </div>
  </div>
</div>
